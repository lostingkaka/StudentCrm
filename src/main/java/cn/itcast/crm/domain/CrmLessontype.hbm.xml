<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="cn.itcast.crm.domain.CrmLessontype" table="crm_lessontype" >
        <id name="lessonTypeId" type="java.lang.String">
            <column name="lessonTypeID" length="50" />
            <generator class="uuid" />
        </id>
        <property name="lessonCost" type="java.lang.Double">
            <column name="lessonCost" precision="22" scale="0" />
        </property>
        <property name="total" type="java.lang.Integer">
            <column name="total" />
        </property>
        <property name="lessonName" type="java.lang.String">
            <column name="lessonName" length="500" />
        </property>
        <property name="remark" type="java.lang.String">
            <column name="remark" length="5000" />
        </property>
        <!--set name="crmClasses" inverse="true">
            <key>
                <column name="lessonTypeID" length="50" />
            </key>
            <one-to-many class="cn.itcast.crm.domain.CrmClass" />
        </set-->
    </class>
</hibernate-mapping>
